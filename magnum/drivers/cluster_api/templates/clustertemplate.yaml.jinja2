---
apiVersion: azimuth.stackhpc.com/v1alpha1
kind: ClusterTemplate
metadata:
  name: "{{ template.uuid | urlencode }}"
spec:
  deprecated: {{ template.hidden | lower }}
  description: "auto generated by magnum for {{ template.name | urlencode }}"
  label: "{{ template.name | urlencode }}"
  values:
    global:
      kubernetesVersion: "{{ template.labels.get('kube_tag') }}"
    machineImageId: "{{ template.image_id | urlencode }}"
